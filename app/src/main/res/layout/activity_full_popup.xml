<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_dutyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#f3f3f3"
        app:cardElevation="8dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_duty_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="12sp"
                    android:text="1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_duty_title"
                    android:layout_width="266dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_duty_title_id"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:padding="12sp"
                    android:text="Item Title"
                    android:textSize="18sp" />


                <ImageButton
                    android:id="@+id/ib_delete_Title"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/ib_edit_Step"
                    android:background="#f3f3f3"
                    android:src="@drawable/ic_delete" />

                <ImageButton
                    android:id="@+id/ib_edit_Step"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_duty_title"
                    android:background="#f3f3f3"
                    android:src="@drawable/ic_edit" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:orientation="vertical"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_step_item"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scrollbarSize="10dp"
                    android:scrollbars="vertical"
                    />


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_subItem"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add"/>

</LinearLayout>