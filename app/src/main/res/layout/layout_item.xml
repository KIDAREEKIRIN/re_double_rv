<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_dutyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#f3f3f3"
        app:cardElevation="8dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearUpDown"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_downBtn"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:background="#f3f3f3"
                        android:src="@drawable/ic_down"
                        />

                    <ImageButton
                        android:id="@+id/ib_upBtn"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:background="#f3f3f3"
                        android:src="@drawable/ic_up"
                        android:visibility="gone"
                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_duty_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/linearUpDown"
                    android:padding="12sp"
                    android:text="1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_duty_title"
                    android:layout_width="246dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_duty_title_id"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:padding="12sp"
                    android:text="Item Title"
                    android:textSize="18sp" />


                <ImageButton
                    android:id="@+id/ib_delete_Title"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/ib_edit_Title"
                    android:background="#f3f3f3"
                    android:src="@drawable/ic_delete" />

                <ImageButton
                    android:id="@+id/ib_edit_Title"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_duty_title"
                    android:background="#f3f3f3"
                    android:src="@drawable/ic_edit" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_step_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>